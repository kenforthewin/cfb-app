.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading Select Date
      .panel-body
        = simple_form_for @game_date, url: "/game_dates/show", method: :post do |f|
          .input-group
            .input-group-addon#show-datepicker
              = fa_icon 'calendar'
            = f.input :date, as: :string, placeholder: 'MM/DD/YYYY', label: false, input_html: {class: 'form-control', id: 'datepicker'}
          %br
          = f.button :submit, 'Search'
